Start = true
Gameover = false
If start = true then
local playerCount = {}

for _, plr in ipairs(game.Players:GetChildren()) do
  table.insert(playerCount, plr)
end
function say(...)game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(tostring(...), "All") end

say("ðŸŸ Welcome to the game of "..game.Players.LocalPlayer.Name..", There are currently " .. #playerCount .. " playing in this round.ðŸŸ ")

game.Players.PlayerRemoving:Connect(function(plr) 
  local index = table.find(playerCount, plr) 
  table.remove(playerCount, tonumber(index)) 
end)

game.Players.PlayerDied:Connect(function(plr)
  local index = table.find(playerCount, plr)
  table.remove(playerCount, tonumber(index))
end)

While start = true do
wait(30)
say("ðŸŸ There is " .. #playerCount .. " still alive!ðŸŸ ")
End

if gameover == true and #playerCount > 0 then
  local remainingContestants = ""
  for i, plr in ipairs(playerCount) do
    remainingContestants = remainingContestants .. plr.Name
    if i < #playerCount then
      remainingContestants = remainingContestants .. ", "
    end
  end
  say("ðŸŸ Game is over! Remaining contestants: " .. remainingContestants .. "ðŸŸ ")

elseif #playerCount == 1 then
Gameover = true
end
elseif gameover == true and #playerCount == 0 then
  local remainingContestants = ""
  for i, plr in ipairs(game.Players:GetChildren()) do
    remainingContestants = remainingContestants .. plr.Name
    end
  end
  say("ðŸŸ Game is over! Last one standing: " .. remainingContestants .. "ðŸŸ ")
  start = false
end




